<h2>Edit Article, <%= @article.title %>.</h2>

<%= form_for([@user, @article], method: :put, url: user_article_path(@user, @article)) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :body %> 
  <%= f.text_area :body %><br>
  <%= f.label :user_id %>
  <%= f.collection_select :user_id, User.all, :id, :first_name, prompt: true %><br>
  <%= f.submit "Update article" %>
<% end %>

<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %>">
    <%= msg %>
  </div>
<% end %>
