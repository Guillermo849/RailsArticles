<h2> <%= @article.title %> </h2> 
<p> <%= @article.body %> </p>
<p>
    <%= button_to "Update", edit_user_article_path(current_user.id, @article), method: :get %>
    <%= button_to "Destroy", user_article_path(current_user.id, @article), method: :delete %>
</p>
<p> <%= link_to "Back", user_articles_path %> </p>

<% flash.each do |type, msg| %>
    <div class="alert alert-<%= type %> alert-dismissible">
        <%= msg %>
    </div>
<% end %>
