<body>
  <h1> Articles Creation </h1>
  <%= form_with model: [current_user, @article], local: true do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :body %> 
    <%= f.text_area :body %><br>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :first_name, prompt: true %><br>
    <%= f.submit %>
  <% end %>

  <% flash.each do |type, msg| %>
    <div class="alert alert-<%= type %> alert-dismissible">
      <%= msg %>
    </div>
  <% end %>
</body>
